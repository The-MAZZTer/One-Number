{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
		"experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types", "../../../typings"],
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
